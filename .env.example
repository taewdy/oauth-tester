OAUTH_TESTER_APP_NAME=OAuth Tester
OAUTH_TESTER_SERVER__DEBUG=true

# OAuth/session config
OAUTH_TESTER_OAUTH__SECRET_KEY=change-me
OAUTH_TESTER_OAUTH__SESSION_COOKIE_NAME=oauth_tester_session

# Base URL must be HTTPS for Thread
OAUTH_TESTER_OAUTH__BASE_URL=https://localhost:8000
OAUTH_TESTER_OAUTH__REDIRECT_PATH=/auth/callback

# Provider config (generic OIDC)
OAUTH_TESTER_OAUTH__PROVIDER_NAME=threads
OAUTH_TESTER_OAUTH__SCOPES=threads_basic

# Preferred: OIDC Discovery URL (includes endpoints & JWKS)
OAUTH_TESTER_OAUTH__OIDC_DISCOVERY_URL=

# Or manual endpoints (fill if discovery is not available)
# Threads OAuth 2.0 per docs in docs/thread_auth.md
# OAUTH_TESTER_OAUTH__AUTHORIZE_URL=https://threads.net/oauth/authorize
# OAUTH_TESTER_OAUTH__TOKEN_URL=https://graph.threads.net/oauth/access_token
# Optional (if you want to fetch profile and if available):
# OAUTH_TESTER_OAUTH__USERINFO_ENDPOINT=https://graph.threads.net/me
# OAUTH_TESTER_OAUTH__USERINFO_FIELDS=id,username
OAUTH_TESTER_OAUTH__AUTHORIZE_URL=
OAUTH_TESTER_OAUTH__TOKEN_URL=
OAUTH_TESTER_OAUTH__JWKS_URL=
OAUTH_TESTER_OAUTH__USERINFO_ENDPOINT=
OAUTH_TESTER_OAUTH__USERINFO_FIELDS=

# OAuth client registration
OAUTH_TESTER_OAUTH__CLIENT_ID=
OAUTH_TESTER_OAUTH__CLIENT_SECRET=
OAUTH_TESTER_OAUTH__USE_PKCE=false
# Enable only if your provider requires appsecret_proof for API calls
OAUTH_TESTER_OAUTH__COMPUTE_APPSECRET_PROOF=false

# Threads permissions/scopes (adjust per your appâ€™s needs)
# OAUTH_TESTER_OAUTH__SCOPES=threads_basic,threads_content_publish

# Local HTTPS certs (self-signed OK for dev)
OAUTH_TESTER_OAUTH__SSL_CERTFILE=certs/localhost.crt
OAUTH_TESTER_OAUTH__SSL_KEYFILE=certs/localhost.key
